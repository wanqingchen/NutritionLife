<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wanqingchen.nutritionlife.Welcome"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtpasswordlogin"
        android:layout_alignEnd="@+id/btnUserLogin"
        android:layout_marginEnd="55dp"
        android:text="Password"
        android:textSize="20dp"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="215dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtemaillogin"
        android:layout_alignStart="@+id/txtemaillogin"
        android:layout_marginBottom="12dp"
        android:text="Email Address"
        android:textSize="20dp"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="126dp" />

    <EditText
        android:id="@+id/txtemaillogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtpasswordlogin"
        android:layout_alignStart="@+id/txtpasswordlogin"
        android:layout_marginBottom="37dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="153dp" />

    <EditText
        android:id="@+id/txtpasswordlogin"
        android:layout_width="220dp"
        android:layout_height="43dp"
        android:layout_alignStart="@+id/textView3"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPassword"
        tools:ignore="MissingConstraints"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="242dp" />

    <Button
        android:id="@+id/btnUserLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_alignStart="@+id/btnRegistration"
        android:layout_marginBottom="24dp"
        android:text="log in "
        android:onClick="btnSignin_Click"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="303dp" />

    <Button
        android:id="@+id/btnRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:onClick="btnRegistration_Click"
        android:text="sign up"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="399dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_above="@+id/btnRegistration"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Don't have an account? Sign up here: "
        android:textSize="15dp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="363dp" />


</RelativeLayout>
