<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wanqingchen.nutritionlife.AddFood">

    <LinearLayout android:id="@+id/ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/inputCarbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="14sp"
            android:inputType="number"
            android:textAlignment="center"
            />

        <NumberPicker
            android:id="@+id/measures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView android:id="@+id/showParsedJSON"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

        <CheckBox
            android:id="@+id/BreakfastCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"

            />

        <CheckBox
            android:id="@+id/LunchCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch"

            />

        <CheckBox
            android:id="@+id/DinnerCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner"

            />

        <CheckBox
            android:id="@+id/SnackCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snack"
            />


        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnAdd_Click"
            android:text="Add" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnCancel_Click"
            android:text="Cancel" />

    </LinearLayout>




</ScrollView>